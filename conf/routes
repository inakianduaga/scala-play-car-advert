# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# REST endpoints
GET     /car/adverts                controllers.CarAdvertsController.index
GET     /car/adverts/:id            controllers.CarAdvertsController.show(id: Int)
POST    /car/adverts/:id            controllers.CarAdvertsController.create(id: Int)
PUT     /car/adverts/:id            controllers.CarAdvertsController.update(id: Int)
DELETE  /car/adverts/:id            controllers.CarAdvertsController.delete(id: Int)

